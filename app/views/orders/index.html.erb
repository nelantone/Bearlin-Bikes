
<section class="index">
  <div class="big-bear-img"></div>
  <p id="notice"><%= notice %></p>

  <h2>Orders</h2>
  <% if @orders.empty? %>
    <p><h3>You still don't have any orders</p></h3>
  <% else %>
    <p><h3> These are your orders!</h3></p>

    <div class="container">
      <div class="grid">
        <% @orders.each do |order| %>
          <div class="col-sm-2 col-md-4">
            <%= order.name %><br>
            <%= order.description %><br>
            <%= order.color %>
            <% if order.image_url.nil? %>
              (no image)
            <% else %>
            <%= image_tag(order.image_url, height: '20%', width: '35%') %>
            <% end %>
            <br>
            <%= order.price %> Eur.<br>
            <%= link_to 'Show details', order %>
            <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div> <!-- col-sm-2 col-md-4 -->
        <% end %>
      </div><!-- grid -->
      <br><br>
    </div><!-- container -->
  <% end %>
  <br>
</section>