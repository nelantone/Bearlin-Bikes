
<section class="index">
  <div class="big-bear-img"></div>
  <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
  <% end %>

  <h2>Products</h2>
  <% if current_user.nil? %>
    <%= link_to icon('save', 'New Product'), new_product_path %>
  <% else %>
    <%= link_to icon('save', 'New Product'), new_product_path, class: "btn btn-default" %>
  <% end %>
  <% if @products.nil? %>
    <p><h3> Soon you will find our products list! We are working on it</h3></p>
  <% else %>
    <div class="container">
      <% cache(cache_key_for_products)  do %>
        <%= render @products %>
      <% end %>
    </div><!-- container -->
  <% end %>
  <br>
  <%= link_to icon('save', 'New Product'), new_product_path, class: "btn btn-default" unless current_user.nil? %>
</section>